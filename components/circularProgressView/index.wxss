.progressWrap,.progressWrap__son,.progressWrap__content{
  border-radius: 50%;
}
.progressWrap{
  position: relative;
  width: 1em;
  height: 1em;
  border-radius: 50%;
  overflow: hidden;
}
.progressWrap__son{
  position: absolute;
  top:0;
  right:0;
  bottom:0;
  left:0;
  margin:auto;
  width: 1em;
  height: 1em;
  background-color: rebeccapurple;
}
.progressWrap__son--right{
  z-index: 1;
  clip:rect(0,auto,auto,.5em);
}
.progressWrap__son--left{
  clip:rect(0,.5em,auto,0);
}
.progressWrap__content{
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 2;
  transform: translate(-50%, -50%);
  width: 1em;
  height: 1em;
  overflow: hidden;
}