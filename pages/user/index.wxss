/* pages/user/index.wxss */
page {
  background-color: #efefef;
}
.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.wrapper .user_info {
  text-align: center;
  position: relative;
  margin-top: 38rpx;
  margin-bottom: 30rpx;
}
.wrapper .user_info .user_name {
  font-size: 40rpx;
  color: #666;
}
.wrapper .user_info .user_tip {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #999;
}
.btn_login {
  padding: 0;
  margin-top: 114rpx;
  width: 278rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #858585;
  background-color: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
  box-shadow: 0 0 10rpx 5rpx rgba(0, 0, 0, 0.05);
}
.user_top {
  width: 750rpx;
  height: 450rpx;
  position: relative;
}
.user_top .avatar {
  position: absolute;
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  overflow: hidden;
  left: 0;
  right: 0;
  margin: auto;
  bottom: 30rpx;
}
.user_top .avatar image {
  overflow: hidden;
}
.modify_btn {
  width: 334rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}
.comment_box {
  overflow: auto;
  width: 686rpx;
  max-height: 500rpx;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}
.comment_box .comment_item {
  background-color: #fff;
  padding: 32rpx 56rpx;
  box-sizing: border-box;
  margin-bottom: 34rpx;
  display: flex;
}
.comment_box .comment_item .school-name {
  width: 150rpx;
  font-size: 24rpx;
  color: #808080;
}
.comment_box .comment_item .comment {
  flex: 1;
  margin-left: 46rpx;
  margin-right: 56rpx;
  font-size: 16rpx;
  color: #999;
  line-height: 24rpx;
}
.comment_box .comment_item .score .score_text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #808080;
}
