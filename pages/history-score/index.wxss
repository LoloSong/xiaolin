/* pages/user/index.wxss */
page {
  background-color: #efefef;
}
.wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.wrapper .user_info {
  text-align: center;
}
.wrapper .user_info .user_name {
  font-size: 40rpx;
  color: #666;
}
.wrapper .user_info .user_tip {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #999;
}
.comment_box {
  width: 686rpx;
  margin-top: 70rpx;
}
.comment_box .comment_item {
  background-color: #fff;
  padding: 32rpx 56rpx;
  box-sizing: border-box;
  margin-bottom: 34rpx;
  display: flex;
}
.comment_box .comment_item .school-name {
  font-size: 24rpx;
  color: #808080;
}
.comment_box .comment_item .comment {
  flex: 1;
  margin-left: 46rpx;
  margin-right: 56rpx;
  font-size: 16rpx;
  color: #999;
  line-height: 24rpx;
}
.comment_box .comment_item .score .score_text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #808080;
}
.user_top {
  width: 750rpx;
  height: 444rpx;
}
.modify_btn {
  margin-bottom: 56rpx;
}
