/* pages/user-modify/index.wxss */
page {
  background-color: #74c3c1;
}
page .wrapper {
  display: flex;
  align-items: center;
  flex-direction: column;
}
page .wrapper form {
  margin-top: 200rpx;
}
page .wrapper .form_item {
  background-color: #fff;
  width: 686rpx;
  padding: 50rpx;
  box-sizing: border-box;
  position: relative;
}
page .wrapper .form_item .seat {
  width: 100%;
  height: 100rpx;
}
page .wrapper .form_item .edit_box {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: -85rpx;
  left: 0;
  right: 0;
  margin: auto;
}
page .wrapper .form_item .edit_box .edit_img {
  width: 100%;
  height: 100%;
}
page .wrapper .form_item .edit_box .edit_img .avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #e6e6e6;
  object-fit: cover;
}
page .wrapper .form_item .edit_box .edit {
  position: absolute;
  z-index: 10;
  color: #6c6c6c;
  font-size: 22rpx;
  bottom: 25rpx;
  text-align: center;
  left: 0;
  right: 0;
}
page .wrapper .form_item .ipu_wrapper {
  position: relative;
  margin-bottom: 38rpx;
}
page .wrapper .form_item .ipu_wrapper .ipu_item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
}
page .wrapper .form_item .ipu_wrapper .search_box {
  background-color: #fff;
  font-size: 22rpx;
  color: #acacac;
  padding: 90rpx 30rpx 30rpx;
}
page .wrapper .form_item .ipu_wrapper .search_box .result_item {
  margin-bottom: 26rpx;
}
page .wrapper .form_item .ipu_wrapper .search_box .result_item:last-child {
  margin-bottom: 0rpx;
}
page .wrapper .form_item .school_item {
  margin-bottom: 38rpx;
}
page .wrapper .form_item .school_item:last-child {
  margin-bottom: 0rpx;
}
page .wrapper .form_item .ipu_list {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
page .wrapper .form_item .ipu_list .text {
  font-size: 22rpx;
  color: #acacac;
  margin-right: 10rpx;
  margin-left: 10rpx;
}
page .wrapper .form_item .ipu_list .ipu_item {
  flex: 1;
  margin-bottom: 0rpx;
}
page .wrapper .form_item .ipu_item {
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 70rpx;
  padding: 0rpx 30rpx;
  font-size: 22rpx;
  color: #acacac;
  border: 1rpx solid rgba(0, 0, 0, 0.2);
  margin-bottom: 38rpx;
  border-radius: 12rpx;
}
page .wrapper .form_item .ipu_item input {
  flex: 1;
  color: #666666;
}
page .wrapper .form_item .ipu_item picker {
  flex: 1;
}
page .wrapper .form_item .ipu_item:last-child {
  margin-bottom: 0rpx;
  position: relative;
}
page .wrapper .form_item:last-child {
  margin-bottom: 130rpx;
  margin-top: 50rpx;
}
page .wrapper .add_school {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 24rpx;
  color: #acacac;
  font-size: 26rpx;
}
page .wrapper .add_school .iconfont {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 1rpx solid #acacac;
  text-align: center;
  line-height: 24rpx;
  font-size: 20rpx;
  margin-right: 14rpx;
}
page .wrapper .btn_box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 34rpx;
  color: #5d7b79;
}
page .wrapper .btn_box .btn {
  width: 178rpx;
  height: 56rpx;
  text-align: center;
  line-height: 58rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
}
page .wrapper .btn_box .goBack {
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}
page .wrapper .btn_box .comfirm {
  background-image: linear-gradient(to bottom, #bddfdc, #77c1bd);
}
